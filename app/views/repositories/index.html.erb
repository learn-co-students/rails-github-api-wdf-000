<div class = "container">
  <h2>Logged in as <%= current_user %></h2>
  <h1>Repos</h1>
  <% if @repos %>
  <ul>
    <% @repos.each do |repo| %>
     <li>
       <%= repo["name"] %><br>
       <%= link_to(repo["html_url"], repo["html_url"]) %><br>
       <%= repo["description"] %>
     </li>
   <% end %>
  </ul>
  <% end %>
  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>
