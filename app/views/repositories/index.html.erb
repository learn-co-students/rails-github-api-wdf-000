<h1><%= @user %></h1>
<div class = "container">
  <h1>Repos</h1>
  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>


  <% if @repos %>
    <% @repos.each do |repo| %>
      <h3><%= repo["name"] %></h3>
      <a href="<%= repo["html_url"] %>">Link</a><br>
    <% end %>
  <% end %>

</div>
