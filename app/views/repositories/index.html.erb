<div class = "container">
  <h1>Repos</h1>
  <%= @user['login'] %>

  <div>
    <% @respositories.each do |repository| %>
      <%= repository["name"] %><br>
    <% end %>
  </div>

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>
